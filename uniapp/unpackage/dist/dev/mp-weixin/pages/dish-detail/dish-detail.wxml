<view class="container"><view class="dish-detail"><view class="dish-header"><text class="dish-name">{{dish.name}}</text><block wx:if="{{dish.matchScore}}"><view class="match-score"><text class="score-text">{{$root.g0+"%匹配"}}</text></view></block></view><view class="dish-description"><text class="description-text">{{dish.description}}</text></view><view class="dish-meta"><view class="meta-item"><text class="meta-icon">⏱️</text><text class="meta-text">{{dish.cookingTime}}</text></view><view class="meta-item"><text class="meta-icon">📊</text><text class="meta-text">{{dish.difficulty}}</text></view><view class="meta-item"><text class="meta-icon">🏷️</text><text class="meta-text">{{dish.category||'家常菜'}}</text></view></view><view class="tags-section"><text class="section-title">🏷️ 菜品标签</text><view class="tags"><block wx:for="{{dish.tags}}" wx:for-item="tag" wx:for-index="__i0__" wx:key="*this"><text class="tag">{{tag}}</text></block></view></view><view class="ingredients-section"><text class="section-title">🥬 所需食材</text><view class="ingredients"><block wx:for="{{dish.ingredients}}" wx:for-item="ingredient" wx:for-index="__i1__" wx:key="*this"><view class="ingredient-item"><text class="ingredient-bullet">•</text><text class="ingredient-text">{{ingredient}}</text></view></block></view></view><view class="steps-section"><text class="section-title">👨‍🍳 制作步骤</text><view class="steps"><block wx:for="{{dish.steps}}" wx:for-item="step" wx:for-index="index" wx:key="index"><view class="step-item"><view class="step-number"><text class="step-num">{{index+1}}</text></view><text class="step-text">{{step}}</text></view></block></view></view><view class="actions"><button data-event-opts="{{[['tap',[['startCooking',['$event']]]]]}}" class="action-btn primary" bindtap="__e"><text class="btn-text">🍳 开始制作</text></button><button data-event-opts="{{[['tap',[['addToFavorites',['$event']]]]]}}" class="action-btn secondary" bindtap="__e"><text class="btn-text">❤️ 收藏菜谱</text></button></view></view></view>