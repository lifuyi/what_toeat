	grid-template-columns: 1fr;
	gap: 25rpx;
	-webkit-animation: fadeInUp 0.6s ease-out;
	        animation: fadeInUp 0.6s ease-out;
}
@-webkit-keyframes fadeInUp {
from {
		opacity: 0;
		-webkit-transform: translateY(30rpx);
		        transform: translateY(30rpx);
}
to {
		opacity: 1;
		-webkit-transform: translateY(0);
		        transform: translateY(0);
}
}
@keyframes fadeInUp {
from {
		opacity: 0;
		-webkit-transform: translateY(30rpx);
		        transform: translateY(30rpx);
}
to {
		opacity: 1;
		-webkit-transform: translateY(0);
		        transform: translateY(0);
}
}
.dish-card {
	-webkit-animation: slideInCard 0.5s ease-out forwards;
	        animation: slideInCard 0.5s ease-out forwards;
	opacity: 0;
	border-radius: 20rpx;
	padding: 25rpx;
	transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.1), 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
	margin-bottom: 20rpx;
	position: relative;
	overflow: hidden;
	-webkit-backdrop-filter: blur(5rpx);
	        backdrop-filter: blur(5rpx);
	border: 1rpx solid rgba(255, 255, 255, 0.2);
	-webkit-transform: translateY(0);
	        transform: translateY(0);
	display: flex;
	flex-direction: column;
	min-height: 280rpx;
	contain: layout style;
}
.dish-card:nth-child(1) { -webkit-animation-delay: 0.1s; animation-delay: 0.1s;
}
.dish-card:nth-child(2) { -webkit-animation-delay: 0.2s; animation-delay: 0.2s;
}
.dish-card:nth-child(3) { -webkit-animation-delay: 0.3s; animation-delay: 0.3s;
}
.dish-card:nth-child(4) { -webkit-animation-delay: 0.4s; animation-delay: 0.4s;
}
.dish-card:nth-child(5) { -webkit-animation-delay: 0.5s; animation-delay: 0.5s;
}
.dish-card:nth-child(6) { -webkit-animation-delay: 0.6s; animation-delay: 0.6s;
}
@-webkit-keyframes slideInCard {
from {
		opacity: 0;
		-webkit-transform: translateY(50rpx) scale(0.9);
		        transform: translateY(50rpx) scale(0.9);
}
to {
		opacity: 1;
		-webkit-transform: translateY(0) scale(1);
		        transform: translateY(0) scale(1);
}
}
@keyframes slideInCard {
from {
		opacity: 0;
		-webkit-transform: translateY(50rpx) scale(0.9);
		        transform: translateY(50rpx) scale(0.9);
}
to {
		opacity: 1;
		-webkit-transform: translateY(0) scale(1);
		        transform: translateY(0) scale(1);
}
}
